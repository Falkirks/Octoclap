<div class="container">
    {{#user}}
        <div id="wrapper">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    {{#repos}}
                        <li><a href="/{{full_name}}">{{full_name}}</a></li>
                    {{/repos}}
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            {{#with ../repoSelected}}
                                <h1>{{full_name}}</h1>
                                {{#messages}}
                                    {{content}}
                                {{/messages}}
                                {{^messages}}
                                    <p>This repo has only just been added and doesn't have any messages. Why not send one now?</p>
                                {{/messages}}
                                <form role="form">
                                    <textarea class="form-control">
                                        
                                    </textarea>
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </form>
                            {{else}}
                                <h1>Octoclap</h1>
                                <p> Ready to push messages to users of your open source software? This page will give you details on integrating Octoclap into your application.</p>
                                <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
    {{/user}}
    {{^user}}
        <div class="row" style="padding: 25px;">
            <div class="page-header">
                <h1>Octoclap</h1>
            </div>
            <p class="lead">
                Octoclap is a simple news pushing service for open source (GitHub) software. It allows developers to quickly create messages and push them to users through code inserted into their application.
            </p>
            <a class="btn btn-lg btn-default" href="/auth/github"><i class="fa fa-github"></i> Login with GitHub</a>
        </div>
    {{/user}}
</div>