<div class="container">
    {{#user}}
        <div id="wrapper">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    {{#repos}}
                        <li><a href="/{{full_name}}">{{full_name}}</a></li>
                    {{/repos}}
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            {{#with ../message}}
                                <div class="alert alert-info alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert"
                                            aria-hidden="true">
                                        &times;
                                    </button>
                                    {{this}}
                                </div>
                            {{/with}}
                            {{#with ../repoSelected}}
                                <h1>{{full_name}}</h1>
                                <table class="table table-hover table-responsive">
                                    {{#messages}}
                                        <tr><td>{{timestamp}}</td><td>{{author}}</td><td>{{content}}</td></tr>
                                    {{/messages}}
                                    {{^messages}}
                                        <tr><td>Now</td><td><span class="text-primary">System</span></td><td><p>This repo has only just been added and doesn't have any messages. Why not send one now?</p></td></tr>
                                    {{/messages}}
                                </table>
                                <form role="form" method="post">
                                    <div class="form-group">
                                        <textarea class="form-control" name="content">

                                        </textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Submit</button>
                                </form>
                            {{else}}
                                <h1>Octoclap</h1>
                                <p> Ready to push messages to users of your open source software? This page will give you details on integrating Octoclap into your application.</p>
                                <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
    {{/user}}
    {{^user}}
        <div class="row" style="padding: 25px;">
            <div class="page-header">
                <h1>Octoclap</h1>
            </div>
            <p class="lead">
                Octoclap is a simple news pushing service for open source (GitHub) software. It allows developers to quickly create messages and push them to users through code inserted into their application.
            </p>
            <a class="btn btn-lg btn-default" href="/auth/github"><i class="fa fa-github"></i> Login with GitHub</a>
        </div>
    {{/user}}
</div>